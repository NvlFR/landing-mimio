---
import { Image } from 'astro:assets';
import iconFb from '../assets/facebook.png';
import iconIg from '../assets/instagram.png';
import iconWa from '../assets/whatsapp.png';
import iconYt from '../assets/youtube.png';

const currentYear = new Date().getFullYear();

const socialLinks = [
  { name: 'Instagram', url: 'https://instagram.com/mimio_17', icon: iconIg },
  { name: 'Facebook', url: 'https://facebook.com/mimio.official', icon: iconFb },
  { name: 'WhatsApp', url: 'https://wa.me/6285320136919', icon: iconWa },
  { name: 'YouTube', url: 'https://youtube.com/@mimio.official', icon: iconYt },
];
---

<footer class="bg-black text-white py-12 border-t border-white/10">
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row justify-between items-center gap-6">
      <div class="text-center md:text-left">
        <h3 class="font-display text-2xl font-black text-[var(--color-primary-400)] mb-2 tracking-tight">MIMIO</h3>
        <p class="text-gray-400 text-sm max-w-xs leading-relaxed">
          Solusi layanan on-demand kebanggaan Majalengka & Cikijing.
        </p>
      </div>

      <div class="flex gap-6 items-center">
        {socialLinks.map(social => (
          <a 
            href={social.url} 
            target="_blank" 
            class="transform hover:scale-110 transition-transform duration-300 opacity-80 hover:opacity-100"
            aria-label={social.name}
          >
            <Image src={social.icon} alt={social.name} class="w-8 h-8 object-contain" />
          </a>
        ))}
      </div>
    </div>
    
    <div class="mt-12 pt-8 border-t border-gray-800 text-center text-gray-500 text-sm">
      &copy; {currentYear} Mimio Official. All rights reserved.
    </div>
  </div>
</footer>
