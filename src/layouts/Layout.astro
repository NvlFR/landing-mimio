---
import "@fontsource/inter";
import "@fontsource/outfit";
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "Mimio - Apapun Keperluanmu, Mimioin Aja!",
  description = "Layanan ojek online lokal Majalengka & Cikijing. Pesan M-Food, M-Send, M-Mart mudah via WhatsApp."
} = Astro.props;
---

<!doctype html>
<html lang="id">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

